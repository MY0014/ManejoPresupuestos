@model IEnumerable<TipoCuenta>
@{
	ViewData["Tittle"] = "Tipos Cuenta";

}
<html>
    <head>
        <title>Tipos Cuenta</title>
        </head>
    <body>
        <h1>Tipos de Cuentas</h1>
        <h5>El tipo de cuenta se refiere a como podemos agrepar cuentas.
            Ejemplos: Prestamos, Tarjetas de credito, etc.
        </h5>

        <a asp-action="Crear" class="btn btn-primary mb-3"> Crear Nuevo</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Acciones</th>
                    <th>Nombre</th>
                </tr>

            </thead>
            <tbody>
            @foreach( var tipoCuenta in Model)
            {
                <tr>
                    <td>
                        <a class="btn btn-primary" asp-action="Editar" asp-route-id="@tipoCuenta.Id">Editar</a>
                        <a class="btn btn-danger">Borrar</a>
                    </td>
                    <td>
                        @tipoCuenta.Nombre
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </body>
</html>

